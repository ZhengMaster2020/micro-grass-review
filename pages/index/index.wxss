/**index.wxss**/
@import "./weui.wxss";

.search-bar {
  background-color: #aaa;
  width: 100%;
}
.search-bar
#shadow-root
.van-search {
  padding: 8rpx;
}

.search-icon {
  margin: 4rpx 12rpx 0;
  font-size: 28rpx;
}

.recommend-block {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin: 10rpx 0;
}

.book-img-warp {
  width: 100vw;
  /* background: #f8f8f8; */
  /* border-radius: 10rpx; */
  display: flex;
  justify-content: left;
  margin: 2rpx;
}

.book-img {
  margin: 20rpx;
  border-radius: 10rpx;
}

.book-text {
  height: 7rem;
  overflow: hidden;
  padding-right: 20rpx;
}
.book-text .book-outline {
  font-size: 24rpx;
  color: #777;
  line-height: 2;
  margin-top: 10rpx;
  margin-right: 10rpx;
  /* 文本多行超出显示省略号 */
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.page-section{
  width: 100vw;
  /* min-width: 860rpx; */
  margin-bottom: 60rpx;
}
.page-section_center{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page-section:last-child{
  margin-bottom: 0;
}
.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.page-section-spacing{
  box-sizing: border-box;
  /* padding: 0 80rpx; */
}
.page-section-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.page-section-gap .page-section-title{
  padding-left: 0;
  padding-right: 0;
}

