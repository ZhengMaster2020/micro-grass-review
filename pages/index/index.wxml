      <view class="book-text">
        <rich-text nodes="{{bookNodes}}" bindtap="toDetial"></rich-text>
        <text class="book-outline">{{bookOutline[1]}}</text>
      </view>   
    </view> 
    <view class="book-img-warp">
      <van-image
        class="book-img"
        src="https://img.yzcdn.cn/vant/cat.jpeg"
        width="4rem"
        height="6rem"
        fit="cover"
        lazy-load
        show-error
        show-loading
        show-menu-by-longpress
        use-error-slot>
        <text slot="error">加载失败</text>
      </van-image>
      <view class="book-text">
        <rich-text nodes="{{bookNodes}}" bindtap="toDetial"></rich-text>
        <text class="book-outline">{{bookOutline[1]}}</text>
      </view>   
    </view> 
  </view>
  <!-- 热门书籍模块 End -->

  <!-- 新书推荐模块 Start -->
  <view class="recommend-block">
    <van-button type="primary" icon="new-o" size="small" round>新书推荐</van-button>
    <view class="book-img-warp">
      <van-image
        class="book-img"
