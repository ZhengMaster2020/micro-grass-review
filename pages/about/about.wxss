/* pages/about/about.wxss */
.header-about{
  position: relative;
  height: 30vh;
  background-color: #44BB5C;
  background: url(http://img2.imgtn.bdimg.com/it/u=3792076576,2663602442&fm=26&gp=0.jpg) no-repeat center;
  background-size: 100% auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-login{
  width: 50vw;
  color: #44BB5C;
  background: #fff;
  border-radius: 25px;
}
.header-about .login {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 22rpx;
  justify-content: center;
  align-items: center;
}
.header-about .exit-btn {
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
}
.main-about-title{
  display: block;
  height: 60px;
  width: 100vw;
  background: #fff;
  color: #121212;
  font-size: 40rpx;
  line-height: 60px;
  margin-left: 40rpx;
}
.login-to{
  font-size: 25rpx;
  color: #c7c7c7;
  float: right;
  margin-right: 60rpx;
}
.login-to::after{
  content: '>';
  font-size: 30rpx;
  margin-left: 10rpx;
}
image{
  width: 40rpx;
  height: 40rpx;
}
.bookmsg{
  margin-bottom: 40rpx;
  margin-left: 40rpx;
}
.bookmsg > view {
  height: 60rpx;
  margin-top: 26rpx;
  color: #757575;
  font-size: 32rpx;
}
.left-icon{
  margin-right: 10rpx;
}
.right-arrow{
  float: right;
  margin-right: 20rpx;
}