.list-detail {
  background: #f6f6f1;
}
.list-detail .title-wrap {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  background: url(http://img4.imgtn.bdimg.com/it/u=1250202405,4035814967&fm=26&gp=0.jpg) no-repeat center;
  background-size: 100% auto; 
}
.title-wrap .title-text {
  display: flex;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.664);
  color: #f5f5f5;
  font-size: 40rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.list-detail .list-book-wrap {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.list-book-wrap .tag {
  margin-bottom: 20rpx;
}
.list-book-wrap .tag .num {
  padding: 10rpx;
}
.list-book-wrap .detail {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.list-book-wrap .detail .img {
  margin-right: 20rpx;
}
.list-book-wrap .detail .left {
  display: flex;
}
.list-book-wrap .detail .des-wrap {
  display: flex;
  padding: 0 20rpx;
  flex-direction: column;
  justify-content: space-around;
}
.list-book-wrap .detail .des-wrap .title {
  font-weight: bold;
}
.des-wrap .author {
  font-size: 24rpx;
  color: #666;
}
.list-book-wrap .detail .look {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  border-left: 3rpx dotted #ccc;
}
.detail .look  .text {
  font-size: 28rpx;
  color: #ffd21e;
}

.list-detail .des {
  background: #f6f6f1;
  padding: 20rpx;
  line-height: 1.5;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #666;
  border-radius: 8rpx;
}

